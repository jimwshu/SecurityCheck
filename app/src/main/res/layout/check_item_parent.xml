<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/parent"
                android:background="#ffffff"
                >


    <TextView
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="16dp"
            android:textColor="#1a1a1a"
            android:layout_marginLeft="20dp"
            android:id="@+id/parent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    <TextView
            android:visibility="gone"
            android:text="检查人"
            android:id="@+id/check_parent_score"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="16dp"
            android:textColor="#ff0000"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:visibility="gone"
            android:text="检查分数"
            android:id="@+id/check_parent_name"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="16dp"
            android:textColor="#ff0000"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/parent_divider"
            android:layout_alignParentBottom="true"
            android:background="#e9e9e9"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


    <View
            android:id="@+id/parent_remind"
            android:background="#0f86ff"
            android:layout_alignRight="@+id/parent_title"
            android:layout_alignLeft="@+id/parent_title"
            android:layout_above="@+id/parent_divider"
            android:layout_width="wrap_content"
            android:layout_height="3dp"/>
    
    

</RelativeLayout>